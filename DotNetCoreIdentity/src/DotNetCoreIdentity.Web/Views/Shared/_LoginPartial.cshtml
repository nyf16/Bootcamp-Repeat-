@using Microsoft.AspNetCore.Identity
@using DotNetCoreIdentity.Domain.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@*Kullanıcı giriş yapıp yapmadığını kontrol et*@

@if (SignInManager.IsSignedIn(User))
{
    @*Kullanıcı giriş yapmışsa ekrana kullanıcı bilgilerini ve çıkış yap butonunu ekle*@
    <form asp-area="Account" asp-controller="Account" asp-action="Logout" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <span>Merhaba @User.Identity.Name</span>
            </li>
            <li>
                <button type="submit" class="btn btn-warning navbar-btn navbar-link">
                    Çıkış
                </button>
            </li>
        </ul>
    </form>
}
else
{
    @*Kullanıcı giriş yapmamışsa, Login ve Register Butonlarını göster. *@
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a asp-area="Account" asp-action="Login" asp-controller="Account" class="btn btn-outline-primary">Giriş</a>
        </li>
        <li>
            <a asp-action="Register" asp-controller="Account" class="btn btn-outline-primary">Kayıt Ol</a>
        </li>
    </ul>
}